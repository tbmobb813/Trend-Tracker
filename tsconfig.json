{

  "compilerOptions": {

    "target": "ESNext",

    "module": "ESNext",

    "lib": ["ESNext"],

    "jsx": "react-native",

    "allowJs": true,

    "skipLibCheck": true,

    "esModuleInterop": true,

    "moduleResolution": "node",

    "resolveJsonModule": true,

    "noEmit": true,

    "isolatedModules": true,

    "strict": true,

    "baseUrl": ".",

    "paths": {

      "@/*": ["./*"]

    }

  },

  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]

}
